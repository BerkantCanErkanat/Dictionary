<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/wordEText"
        android:layout_width="292dp"
        android:layout_height="54dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="New Word"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/wordTText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/levelText"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:hint="A1-A2-B1-B2-C1-C2-DK"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/alert"
        app:layout_constraintEnd_toEndOf="@+id/alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordTText" />

    <EditText
        android:id="@+id/wordTText"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Turkce"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/levelText"
        app:layout_constraintEnd_toEndOf="@+id/levelText"
        app:layout_constraintStart_toStartOf="@+id/levelText"
        app:layout_constraintTop_toBottomOf="@+id/wordEText" />

    <TextView
        android:id="@+id/alert"
        android:layout_width="334dp"
        android:layout_height="54dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="55dp"
        android:textColor="#FF0303"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginBottom="51dp"
        android:onClick="ekle"
        android:text="EKLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="324dp"
        android:layout_height="70dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="46dp"
        android:text="Lutfen Turkce karakter kullanmayiniz"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wordEText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>